---
import type {Training} from "../services/trainings_api";

interface Props {
    data: Training;
}

const months = [
    "Enero",
    "Febrero",
    "Marzo",
    "Abril",
    "Mayo",
    "Junio",
    "Julio",
    "Agosto",
    "Septiembre",
    "Octubre",
    "Noviembre",
    "Diciembre",
];

const { data } = Astro.props;

let monthName = "";
let day = undefined;

if(data.date) {
    const trainingDate = new Date(data.date);
    const monthNumber = trainingDate.getMonth();
    day = trainingDate.getDate();
    monthName = months[monthNumber].slice(0,3);
}


---

<div class="py-8 px-4 lg:w-1/3" id={`training_${data.id}`}>
    <div class="h-full rounded-3xl border border-slate-200 bg-white p-6 shadow-soft transition hover:-translate-y-1">
        {
            data?.date ?
                    <div
                            class="w-14 flex-shrink-0 rounded-2xl bg-educom-navy/10 py-2 text-center leading-none"
                    >
            <span class="text-xs font-semibold uppercase tracking-wide text-educom-navy pb-2 mb-2 border-b border-educom-navy/30"
            >{monthName}</span
            >
                        <span
                                class="font-display text-xl font-semibold text-educom-ink leading-none"
                        >{day}</span
                        >
                    </div>
                :
                    <div title="Próximamente..." class="w-14 flex-shrink-0 rounded-2xl bg-educom-lime/20 py-2 text-center leading-none">
                        <span class="text-xs font-semibold uppercase tracking-wide text-educom-navy pb-2 mb-2 border-b border-educom-navy/20"
                        >PROX</span
                        >
                    </div>
        }
        <div class="flex-grow pl-6">
            <h2
                    class="text-xs font-semibold uppercase tracking-[0.25em] text-educom-lime mb-2"
            >
                {data.category_name}
            </h2>
            <h1 class="font-display text-xl font-semibold text-educom-ink mb-3">
                {data.title}
            </h1>
            <p class="leading-relaxed mb-5 text-base text-slate-600">
                {data?.summary}
            </p>
            <a class="text-educom-navy text-base font-semibold inline-flex items-center md:mb-2 lg:mb-0 hover:text-educom-navy/80" href={data.link ?? '#'} target="_blank">Más información
                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"></path>
                    <path d="M12 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</div>
