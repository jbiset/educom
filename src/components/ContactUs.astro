<section class="relative py-20" id="contactanos">
  <div class="absolute inset-x-0 top-0 h-40 bg-gradient-to-b from-educom-navy/10 to-transparent"></div>
  <div class="container mx-auto px-6">
    <div class="mx-auto flex max-w-3xl flex-col text-center">
      <span class="text-sm font-semibold uppercase tracking-[0.3em] text-educom-navy/70">Contactanos</span>
      <h1 class="mt-3 font-display text-3xl font-semibold text-educom-ink sm:text-4xl">
        Conversemos sobre tus necesidades educativas
      </h1>
      <p class="mt-4 text-base leading-relaxed text-slate-600">
        Ante cualquier consulta puedes contactarte con nosotros completando los siguientes campos:
      </p>
    </div>
    <div class="mx-auto mt-12 max-w-3xl rounded-3xl border border-slate-200 bg-white p-8 shadow-soft">
      <form action="/api/contact" method="POST" class="flex flex-wrap -m-3">
        <div class="p-3 w-full md:w-1/2">
          <div class="relative">
            <label for="name" class="text-sm font-semibold text-slate-600"
              >Nombre</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="mt-2 w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-base text-slate-700 outline-none transition focus:border-educom-navy focus:bg-white focus:ring-2 focus:ring-educom-navy/20"
            />
          </div>
        </div>
        <div class="p-3 w-full md:w-1/2">
          <div class="relative">
            <label for="email" class="text-sm font-semibold text-slate-600"
              >Correo electrónico</label
            >
            <input
              type="email"
              id="email"
              name="email"
              class="mt-2 w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-2 text-base text-slate-700 outline-none transition focus:border-educom-navy focus:bg-white focus:ring-2 focus:ring-educom-navy/20"
            />
          </div>
        </div>
        <div class="p-3 w-full">
          <div class="relative">
            <label for="message" class="text-sm font-semibold text-slate-600"
              >Mensaje</label
            >
            <textarea
              id="message"
              name="message"
              class="mt-2 h-32 w-full rounded-2xl border border-slate-200 bg-slate-50 px-4 py-3 text-base text-slate-700 outline-none transition focus:border-educom-navy focus:bg-white focus:ring-2 focus:ring-educom-navy/20"
            ></textarea>
          </div>
        </div>
        <div class="p-3 w-full">
          <button
              type="submit"
            class="flex w-full items-center justify-center gap-2 rounded-full bg-educom-navy py-3 text-base font-semibold text-white shadow-soft transition hover:-translate-y-0.5 hover:bg-educom-navy/90 md:w-auto md:px-10"
            >Enviar</button
          >
        </div>
        <div class="p-3 w-full pt-8 mt-8 border-t border-slate-200 text-center">
          <a class="font-semibold text-educom-navy hover:text-educom-navy/80" href="mailto:educom@fio.unicen.edu.ar">educom@fio.unicen.edu.ar</a>
          <p class="leading-normal my-5 text-slate-600">
            Av. del Valle 5737.
            <br />B7400 Olavarría, Provincia de Buenos Aires
          </p>
          <p class="leading-normal my-5 text-slate-600">
            +54 02284 670320 int: 7242
          </p>
          <span class="inline-flex">
            <a title="Canal de Youtube" class="text-educom-navy cursor-pointer transition hover:scale-105" href="https://www.youtube.com/channel/UCjMxrK8kZO-GpXcwNO59J0w">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10" viewBox="0 0 16 16"><path fill="currentColor" d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104l.022.26l.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105l-.009.104c-.05.572-.124 1.14-.235 1.558a2.01 2.01 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006l-.087-.004l-.171-.007l-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.01 2.01 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31 31 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103l.003-.052l.008-.104l.022-.26l.01-.104c.048-.519.119-1.023.22-1.402a2.01 2.01 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007l.172-.006l.086-.003l.171-.007A100 100 0 0 1 7.858 2zM6.4 5.209v4.818l4.157-2.408z"/></svg>
            </a>
          </span>
        </div>
      </form>
    </div>
  </div>
</section>
<script is:inline type="text/javascript">
  document.querySelector("form").addEventListener("submit", async (event) => {
    event.preventDefault();

    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());

    const formURL = "https://docs.google.com/forms/d/e/1FAIpQLScvVX6f4XrLTkWua6hOP28Y66Qk_svWgHJlA_5ibkZVMP1PKw/formResponse";

    const response = await fetch(formURL, {
      method: "POST",
      body: new URLSearchParams({
        "entry.753742617": data.name,
        "entry.912111863": data.email,
        "entry.1208802164": data.message,
      }),
      mode: "no-cors",
    });

    alert("Datos enviados a Google Sheets");
  });
</script>
