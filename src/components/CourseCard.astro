---
interface Course {
    category: string;
    name: string;
    month: string;
    date: string;
    resume: string;
    link?: string;
}

interface Props {
    course: Course;
    key: string;
}

const { course, key } = Astro.props;
---

<div class="py-8 px-4 lg:w-1/3">
    <div class="h-full flex items-start">
        <div
                class="w-12 flex-shrink-0 flex flex-col text-center leading-none"
        >
            <span class="text-gray-500 pb-2 mb-2 border-b-2 border-gray-200"
            >{course.month}</span
            >
            <span
                    class="font-medium text-lg text-gray-800 title-font leading-none"
            >{course.date}</span
            >
        </div>
        <div class="flex-grow pl-6">
            <h2
                    class="tracking-widest text-xs title-font font-medium text-indigo-500 mb-1"
            >
                {course.category}
            </h2>
            <h1 class="title-font text-xl font-medium text-gray-900 mb-3">
                {course.name}
            </h1>
            <p class="leading-relaxed mb-5 text-base">
                {course.resume}
            </p>
            <a class="text-[#0f47ad] text-base inline-flex items-center md:mb-2 lg:mb-0" href={course.link ?? '#'} target="_blank">Más información
                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M5 12h14"></path>
                    <path d="M12 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>
    </div>
</div>