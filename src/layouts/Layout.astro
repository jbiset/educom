---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web Educom" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${import.meta.env.BASE_URL}/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${import.meta.env.BASE_URL}/favicon-16x16.png`} />
    <link rel="apple-touch-icon" href={`${import.meta.env.BASE_URL}/apple-touch-icon.png`} />
    <link rel="manifest" href={`${import.meta.env.BASE_URL}/site.webmanifest`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 text-educom-ink font-body antialiased">
    <header class="sticky top-0 z-50 border-b border-slate-200/70 bg-white/90 backdrop-blur">
      <div class="container mx-auto flex flex-wrap items-center gap-4 px-6 py-4">
        <a href="/" class="flex items-center">
          <img src={`${import.meta.env.BASE_URL}/logo.webp`} alt="logo educom" height="70" width="260" class="h-12 w-auto" />
        </a>
        <nav class="md:ml-auto flex flex-wrap items-center justify-center gap-5 text-sm font-semibold uppercase tracking-wide text-slate-600">
          <a class="hover:text-educom-navy transition-colors" href="#capacitaciones">Capacitaciones</a>
          <a class="hover:text-educom-navy transition-colors" href="#sobre-nosotros">Sobre nosotros</a>
          <a class="hover:text-educom-navy transition-colors" href="#nuestro-equipo">Nuestro equipo</a>
          <a class="hover:text-educom-navy transition-colors" href="#nuestros-servicios">Nuestros servicios</a>
          <a class="hover:text-educom-navy transition-colors" href="#contactanos">Contactanos</a>
        </nav>
        <a
          class="inline-flex items-center gap-2 rounded-full bg-educom-navy px-4 py-2 text-sm font-semibold text-white shadow-soft transition hover:-translate-y-0.5 hover:bg-educom-navy/90"
          href="https://www.fio.unicen.edu.ar"
          target="_blank"
        >
          Facultad de Ingeniería - Olavarría
          <svg
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            class="w-4 h-4"
            viewBox="0 0 24 24"
          >
            <path d="M5 12h14M12 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </header>

    <slot />

    <footer>
      <div class="container mx-auto flex flex-col items-center justify-center gap-4 px-6 py-8 text-center sm:flex-row sm:text-left">
        <a href="/" class="flex items-center">
          <img src={`${import.meta.env.BASE_URL}/logo.webp`} alt="logo educom" height="70" width="260" class="h-12 w-auto" />
        </a>
        <p class="text-sm sm:border-l-2 sm:border-gray-200 sm:pl-4">
          This site © 2024 by EDU.COM is licensed under
          <a
            href="https://creativecommons.org/licenses/by-sa/4.0/?ref=chooser-v1"
            class="font-semibold underline decoration-white/50 underline-offset-4 hover:text-[#004191]"
            rel="noopener noreferrer"
            target="_blank"
            >CC BY-SA</a
          >
          4.0
        </p>
      </div>
    </footer>
  </body>

  <style is:global>
    html {
      scroll-behavior: smooth;
    }
  </style>


</html>
