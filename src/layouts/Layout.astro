---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web Educom" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/x-icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} />
    <link rel="icon" type="image/png" sizes="32x32" href={`${import.meta.env.BASE_URL}/favicon-32x32.png`} />
    <link rel="icon" type="image/png" sizes="16x16" href={`${import.meta.env.BASE_URL}/favicon-16x16.png`} />
    <link rel="apple-touch-icon" href={`${import.meta.env.BASE_URL}/apple-touch-icon.png`} />
    <link rel="manifest" href={`${import.meta.env.BASE_URL}/site.webmanifest`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 text-educom-ink font-body antialiased">
    <header class="sticky top-0 z-50 border-b border-[#004171]/10 bg-white/95 backdrop-blur">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between gap-4">
          <a href="/" class="flex items-center">
            <img src={`${import.meta.env.BASE_URL}/logo.webp`} alt="logo educom" height="70" width="260" class="h-11 w-auto md:h-12" />
          </a>
          <div class="hidden flex-1 items-center gap-4 lg:flex">
            <nav class="flex flex-1 items-center justify-center gap-4 text-xs font-semibold uppercase tracking-[0.18em] text-slate-600">
              <a class="whitespace-nowrap hover:text-[#004171] transition-colors" href="#capacitaciones">Capacitaciones</a>
              <a class="whitespace-nowrap hover:text-[#004171] transition-colors" href="#sobre-nosotros">Sobre nosotros</a>
              <a class="whitespace-nowrap hover:text-[#004171] transition-colors" href="#nuestro-equipo">Nuestro equipo</a>
              <a class="whitespace-nowrap hover:text-[#004171] transition-colors" href="#nuestros-servicios">Nuestros servicios</a>
              <a class="whitespace-nowrap hover:text-[#004171] transition-colors" href="#contactanos">Contactanos</a>
            </nav>
            <a
              class="inline-flex items-center gap-2 rounded-full border border-[#004171]/20 px-3 py-1.5 text-xs font-semibold text-[#004171] transition hover:bg-[#004171] hover:text-white"
              href="https://www.fio.unicen.edu.ar"
              target="_blank"
            >
              FIO Olavarría
              <svg
                fill="none"
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                class="w-4 h-4"
                viewBox="0 0 24 24"
              >
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          <details class="relative lg:hidden">
            <summary class="list-none inline-flex items-center gap-2 rounded-full border border-[#004171]/20 bg-white px-3 py-2 text-sm font-semibold text-[#004171]">
              Menú
              <span class="inline-flex h-6 w-6 items-center justify-center rounded-full bg-[#004171]/10">
                <svg class="h-3.5 w-3.5" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M6 9l6 6 6-6"></path>
                </svg>
              </span>
            </summary>
            <div class="absolute right-0 mt-3 w-[17rem] rounded-2xl border border-[#004171]/12 bg-white p-4 shadow-soft">
              <nav class="flex flex-col gap-3 text-xs font-semibold uppercase tracking-[0.18em] text-slate-600">
                <a class="hover:text-[#004171]" href="#capacitaciones">Capacitaciones</a>
                <a class="hover:text-[#004171]" href="#sobre-nosotros">Sobre nosotros</a>
                <a class="hover:text-[#004171]" href="#nuestro-equipo">Nuestro equipo</a>
                <a class="hover:text-[#004171]" href="#nuestros-servicios">Nuestros servicios</a>
                <a class="hover:text-[#004171]" href="#contactanos">Contactanos</a>
              </nav>
              <a
                class="mt-4 inline-flex w-full items-center justify-center gap-2 rounded-full border border-[#004171]/20 px-4 py-2 text-xs font-semibold text-[#004171] transition hover:bg-[#004171] hover:text-white"
                href="https://www.fio.unicen.edu.ar"
                target="_blank"
              >
                Facultad de Ingeniería - Olavarría
              </a>
            </div>
          </details>
        </div>
      </div>
    </header>

    <slot />

    <footer>
      <div class="container mx-auto flex flex-col items-center justify-center gap-4 px-6 py-8 text-center sm:flex-row sm:text-left">
        <a href="/" class="flex items-center">
          <img src={`${import.meta.env.BASE_URL}/logo.webp`} alt="logo educom" height="70" width="260" class="h-12 w-auto" />
        </a>
        <p class="text-sm sm:border-l-2 sm:border-gray-200 sm:pl-4">
          This site © 2024 by EDU.COM is licensed under
          <a
            href="https://creativecommons.org/licenses/by-sa/4.0/?ref=chooser-v1"
            class="font-semibold underline decoration-white/50 underline-offset-4 hover:text-[#004191]"
            rel="noopener noreferrer"
            target="_blank"
            >CC BY-SA</a
          >
          4.0
        </p>
      </div>
    </footer>
  </body>

  <style is:global>
    html {
      scroll-behavior: smooth;
    }
    body {
      overflow-x: hidden;
    }
  </style>


</html>
